<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyle.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextStyle.White.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Gray">
        <item name="android:textColor">@color/colorGray1</item>
    </style>

    <style name="ItemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemLayoutStyle.White">
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WeekIndicatorStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
